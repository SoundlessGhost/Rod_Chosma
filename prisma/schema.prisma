model Category {
  id       Int       @id @default(autoincrement())
  title    String    @unique
  products Product[]
}

model Product {
  id              String   @id @default(uuid())
  name            String
  price           Float
  shape           String
  lens            String
  image           String
  secondaryImages String[]
  sizes           String[]
  badge           String?

  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
}
